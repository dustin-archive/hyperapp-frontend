{
  "name": "hyperapp-frontend",
  "version": "0.0.0",
  "description": "",
  "author": "Dustin Dowell <dustindowell22@gmail.com>",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "js": "rollup src/main.js -o dist/bundle.js -f iife -mc",
    "css": "node-sass --output-style compressed src/main.scss | postcss -u autoprefixer -o dist/styles.css",
    "build": "rm -rf dist && mkdir dist && npm run js && npm run css",
    "watchJS": "chokidar 'src/**/*.js' -c 'npm run js && browser-sync reload'",
    "watchCSS": "chokidar 'src/**/*.scss' -c 'npm run css && browser-sync reload'",
    "minify": "uglifyjs dist/bundle.js -o dist/bundle.min.js -mc",
    "dev": "env $(cat .env) browser-sync start -s --no-ui & npm run watchJS & npm run watchCSS"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whaaaley/hyperapp-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/whaaaley/hyperapp-frontend/issues"
  },
  "homepage": "https://github.com/whaaaley/hyperapp-frontend#readme",
  "dependencies": {
    "classwrap": "^1.1.0",
    "hyperapp": "^0.12.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.18.13",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0"
  }
}
